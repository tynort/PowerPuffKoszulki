        <Button x:Name="button3" Content="7-8 lat" HorizontalAlignment="Left" Margin="348,95,0,0" VerticalAlignment="Top" Width="114" Height="56" Click="button3_Click" FontSize="18"/>
        <Button x:Name="button4" Content="9-11 lat" HorizontalAlignment="Left" Margin="107,210,0,0" VerticalAlignment="Top" Width="114" Height="57" Click="button4_Click" FontSize="18"/>
        <Button x:Name="button5" Content="12- 14 lat" HorizontalAlignment="Left" Margin="269,210,0,0" VerticalAlignment="Top" Width="114" Height="57" Click="button5_Click" FontSize="18"/>
        <TextBlock x:Name="wiek" HorizontalAlignment="Left" Margin="25,21,0,0" TextWrapping="Wrap" Text="Wybierz rozmiar koszulki:" VerticalAlignment="Top" Height="46" Width="299" FontSize="22"/>
